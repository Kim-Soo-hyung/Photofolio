<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.mapper.ChatMapper">
	<select id="list" resultType="com.example.domain.ChatVO">
		select c.*, uprofile from tbl_chat c,
		inner join tbl_user u
		on sender=#{sender} and receiver=#{receiver}
	</select>
	<insert id="insert">
		insert into tbl_chat(sender, message)
		values(#{sender}, #{message})
	</insert>
	<delete id="delete">
		delete from tbl_chat where id = #{id}
	</delete>
</mapper>